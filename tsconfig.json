{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "lib": [
      "dom",
      "es2018",
      "ES2018.AsyncIterable",
      "ES2018.AsyncGenerator"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        // "node_modules/*",
        "src/types/*"
      ],
      // "@tradle/in-house-bot": ["src/in-house-bot/index.ts"],
      // "@tradle/in-house-bot/*": ["src/in-house-bot/*"]
    },
    "types": [
      "node",
      "sinon",
      "lodash",
      "graphql",
      "koa",
      "lru-cache",
      "superagent"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*.d.ts", "**/*.js", "src/test/mock/"],
  "compileOnSave": false
}
